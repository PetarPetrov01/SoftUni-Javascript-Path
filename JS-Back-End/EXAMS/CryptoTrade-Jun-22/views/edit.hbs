<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{#if error}}
    <div>
        <div class="errorContainer">
            {{#each error}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div>
    {{/if}}

    <section id="edit-container">
        <div class="edit-container-info">
            {{#with body}}
            <h1>Edit Announcement</h1>
            <form action="/crypto/{{_id}}/edit" method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{name}}">
                <label>Image:</label>
                <input type="text" id="image" name="imageUrl" value="{{imageUrl}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{price}}">
                <label>Description:</label>
                <textarea name="description" id="description">{{description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    <option value="crypto-wallet">Crypto Wallet</option>
                    <option value="credit-card">Credit Card</option>
                    <option value="debit-card">Debit Card</option>
                    <option value="paypal" selected>PayPal</option>
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
            {{/with}}
        </div>
    </section>
</main>