<main>
    <section id="deatils-page">
        {{#with offer}}
        <div class="wrapper">
            <div class="product-img">
                <img src="{{homeImage}}">
            </div>
            <div class="product-info">
                <div class="product-text">
                    <div class="product-text">
                        <h1>Name: {{name}}</h1>
                        <h2>Type: {{type}}</h2>
                        <h4>Year: {{year}}</h4>
                        <h4>City: {{city}}</h4>
                        <p>Description: {{description}}</p>

                        <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->
                        {{#if tenants}}
                        <p>People rented this housing: {{tenants}}</p>
                        {{else}}
                        <!-- If not display: -->
                        <p>People rented this housing: There are no tenants yet.</p>
                        {{/if}}
                    </div>
                </div>

                <!-- if there is no registered user, do not display buttons-->
                {{#if isUser}}
                <div class="product-btn">
                    <!-- Only for registered user and creator of the housing offer-->
                    {{#if isOwner}}
                    <a href="/offer/{{_id}}/edit" class="edit">Edit</a>
                    <a href="/offer/{{_id}}/delete" class="remove">Delete</a>
                    {{else}}

                    <!-- logged in user with available pieces-->
                        {{#if isAvailable}}
                            {{#if hasRented}}
                            <p class="alRentHome">You have already rent this home</p>
                            {{else}}
                            <a href="/offer/{{_id}}/rent" class="rentHome">Rent a home, available {{available}} housing</a>
                            {{/if}}
                        {{else}}
                        <!-- logged in user with no available pieces-->
                        <p class="no-housing">No Housing Available!</p>
                        {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
        {{/with}}
    </section>
</main>